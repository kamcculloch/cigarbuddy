<div class="page-header">
  <h1>
    Pairings
    <a href="/pairings/new" class="btn btn-lg btn-success">New Pairing</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "pairings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :boldness_name_cont, "Boldness name contains" %>
      <%= f.text_field :boldness_name_cont, :class => "form-control", :placeholder => "Boldness name contains" %>
    </div>

<div class="form-group">
      <%= f.label :taste_name_cont, "Taste name contains" %>
      <%= f.text_field :taste_name_cont, :class => "form-control", :placeholder => "Taste name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/pairings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#pairings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Boldness</th>
        <th>Taste</th>
        <th>Actions</th>
      </tr>

      <% @pairings.each do |pairing| %>
      <tr>
        <td>
          <% if pairing.boldness.present? %>
            <a href="/boldnesses/<%= pairing.boldness.id %>">
              <%= pairing.boldness.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if pairing.taste.present? %>
            <a href="/tastes/<%= pairing.taste.id %>">
              <%= pairing.taste.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/pairings/<%= pairing.id %>" class="btn btn-primary">Show</a>
          <a href="/pairings/<%= pairing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pairing/<%= pairing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pairings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
