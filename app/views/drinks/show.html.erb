<div class="page-header">
  <h3>Drink #<%= @drink.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Alcohol</dt>
      <dd>
        <% if @drink.alcohol.present? %>
          <a href="/alcohols/<%= @drink.alcohol_id %>">
            <%= @drink.alcohol.name %>
          </a>
        <% end %>
      </dd>

      <dt>Taste</dt>
      <dd>
        <% if @drink.taste.present? %>
          <a href="/tastes/<%= @drink.taste_id %>">
            <%= @drink.taste.name %>
          </a>
        <% end %>
      </dd>

      <dt>Price</dt>
      <dd><%= @drink.price %></dd>

      <dt>Origin</dt>
      <dd><%= @drink.origin %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @drink.image_url %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/drinks" class="btn btn-primary">
        Back
      </a>
      <a href="/drinks/<%= @drink.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_drink/<%= @drink.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
