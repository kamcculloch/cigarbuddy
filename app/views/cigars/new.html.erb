<!-- Validation failure messages -->
<% if @cigar.errors.any? %>
  <% @cigar.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Cigar</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_cigar" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for boldness_id -->
      <div class="form-group">
        <label for="boldness_id" class="control-label">
          Boldness
        </label>

        <%= select_tag(:boldness_id, options_from_collection_for_select(Boldness.all, :id, :name, @cigar.boldness_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @cigar.name %>">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @cigar.price %>">
      </div>

      <!-- Label and input for country -->
      <div class="form-group">
        <label for="country" class="control-label">
          Country
        </label>

        <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @cigar.country %>">
      </div>

      <!-- Label and input for size -->
      <div class="form-group">
        <label for="size" class="control-label">
          Size
        </label>

        <input type="text" id="size" name="size" placeholder="Size" class="form-control" value="<%= @cigar.size %>">
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="control-label">
          Image url
        </label>

        <input type="file" id="image_url" name="image_url" class="form-control">
      </div>

      <button class="btn btn-success">
        Create Cigar
      </button>
      or
      <a href="/cigars">Cancel</a>
    </form>
  </div>
</div>
