<!-- Validation failure messages -->
<% if @boldness.errors.any? %>
  <% @boldness.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Boldness #<%= @boldness.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_boldness/<%= @boldness.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @boldness.name %>">
      </div>

      <!-- Label and input for taste_id -->
      <div class="form-group">
        <label for="taste_id" class="control-label">
          Taste
        </label>

        <input type="text" id="taste_id" name="taste_id" placeholder="Taste" class="form-control" value="<%= @boldness.taste_id %>">
      </div>

      <button class="btn btn-warning">
        Update Boldness
      </button>
      or
      <a href="/boldnesses/<%= @boldness.id %>">Cancel</a>
    </form>
  </div>
</div>
